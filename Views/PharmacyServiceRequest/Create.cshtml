@model PharmacyServiceRequestViewModel
@{
    ViewData["Title"] = "Create Pharmacy Service Request";
}

<header class="mb-4">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center p-3 rounded" style="background-color: #957200;">
            <h1 class="m-0 text-white">Admin Portal</h1>
        </div>
    </div>
</header>

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h2>Create Pharmacy Service Request</h2>
            <hr class="border-2 border-top border-secondary">
        </div>
    </div>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="row g-4">
            <!-- Left Column -->
            <div class="col-md-6">
                <div class="form-group">
                    <label>Program Name</label>
                    <select asp-for="SelectedCareProgramId" asp-items="Model.CareProgramOptions" class="form-control" id="CareProgramSelect">
                        <option value="">-- Select Program --</option>
                    </select>

                    <span asp-validation-for="PatientRegistrationsId" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <label>Pharmacy</label>
                    <select id="pharmacy" asp-for="pharmacyId" asp-items="Model.PharmaciesOptions" class="form-control">
                        <option value="">-- Select Lab --</option>
                    </select>
                </div>

                <div class="form-group mt-4">
                    <label asp-for="PatientRegistrationsId" class="form-label fw-bold"></label>
                    <select asp-for="PatientRegistrationsId" class="form-control" id="patientId" placeholder="Select patient">
                    <option value=""></option>
                    </select>
                    <span asp-validation-for="PatientRegistrationsId" class="text-danger small"></span>
                </div>
           
            
            </div>
            <!-- Right Column -->
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="EVoucherPDF" class="form-label fw-bold"></label>
                    <input asp-for="EVoucherPDF" class="form-control" type="file" />
                    <span asp-validation-for="EVoucherPDF" class="text-danger small"></span>
                </div>

                <div class="form-group mt-4">
                    <label>Pharmacy Branch</label>
                    <select id="pharmacyBranch" asp-for="PharmacyBranchId" class="form-control">
                        <option value="">-- Select Pharmacy branch --</option>
                    </select>
                    <span asp-validation-for="PharmacyBranchId" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <input asp-for="Payment" type="checkbox" class="form-check-input" />
                    <label asp-for="Payment" class="form-check-label">Payment Completed</label>
                </div>
            </div>
        </div>
        <!-- Form Footer -->
        <div class="row mt-5">
            <div class="col-12 text-center">
                <button type="submit" class="btn btn-primary px-5 py-2">
                    <i class="bi bi-save me-2"></i>Create Program
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-5 py-2 ms-3">
                    <i class="bi bi-x-circle me-2"></i>Cancel
                </a>
            </div>
        </div>
    </form>
</div>

@section Styles {
    <style>
        .form-control:focus, .form-select:focus {
            border-color: #957200;
            box-shadow: 0 0 0 0.25rem rgba(149, 114, 0, 0.25);
        }

        .btn-primary {
            background-color: #957200;
            border-color: #957200;
        }

       .btn-primary:hover {
           background-color: #7a5e00;
           border-color: #7a5e00;
       }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
          $('#CareProgramSelect').on('change', function () {
            var careProgramId = $(this).val(),
                $patient     = $('#patientId');

            $patient.empty()
                    .append('<option value="">-- Select Patient --</option>');

            if (!careProgramId) return;

            $.get(
              '@Url.Action("GetPatients", "PharmacyServiceRequest")',
              { CareProgramId: careProgramId }
            ).done(function(data) {
              data.forEach(function(p) {
                // handle either camel- or Pascal-case
                var name = p.patientName || p.PatientName;
                $patient.append(
                  '<option value="' + p.id + '">' + name + '</option>'
                );
              });
            });
          });
        });
    </script>

    <script>
        $(document).ready(function() {
          // existing CareProgram→Patients code here…

          // PHARMACY → BRANCH cascader
          $('#pharmacy').on('change', function() {
            var pharmacyId = $(this).val(),
                $branch    = $('#pharmacyBranch');

            $branch
              .empty()
              .append('<option value="">-- Select Pharmacy branch --</option>');

            if (!pharmacyId) return;

            $.get(
              '@Url.Action("GetBranches", "PharmacyServiceRequest")',
              { pharmacyId: pharmacyId }
            ).done(function(data) {
              data.forEach(function(b) {
                $branch.append(
                  '<option value="' + b.id + '">'
                    + (b.name || b.Name)
                    + '</option>'
                );
              });
            });
          });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}