@model CareProgramViewModel
@{
    ViewData["Title"] = "Create Care Program";
}

<header class="mb-4">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center p-3 rounded" style="background-color: #957200;">
            <h1 class="m-0 text-white">Admin Portal</h1>
        </div>
    </div>
</header>

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h2>Create Care Program</h2>
            <hr class="border-2 border-top border-secondary">
        </div>
    </div>

    <form autocomplete="on" asp-action="Create" method="post">
        <div class="row g-4">
            <!-- Left Column -->
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter program name" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
                <div class="form-group mt-4">
                    <label asp-for="StartDate" class="form-label fw-bold"></label>
                    <input asp-for="StartDate" class="form-control" type="date" />
                    <span asp-validation-for="StartDate" class="text-danger small"></span>
                </div>

                <div class="form-group mt-4">
                    <label asp-for="MedicationName" class="form-label fw-bold"></label>
                    <select asp-for="MedicationName" class="medication-select form-select"
                            asp-items="Model.MedicationOptions">
                        <option value=""></option>
                    </select>
                    <span asp-validation-for="MedicationName" class="text-danger small"></span>
                </div>

                <div class="form-group mt-4">
                    <label asp-for="OriginalPrice" class="form-label fw-bold"></label>
                    <div class="input-group">
                        <span class="input-group-text">EGP</span>
                        <input asp-for="OriginalPrice" class="form-control" placeholder="0.00" />
                    </div>
                    <span asp-validation-for="OriginalPrice" class="text-danger small"></span>
                </div>

                <div class="form-group mt-4">
                    <label asp-for="PriceAfterDiscount" class="form-label fw-bold"></label>
                    <div class="input-group">
                        <span class="input-group-text">EGP</span>
                        <input asp-for="PriceAfterDiscount" class="form-control" placeholder="0.00" />
                    </div>
                    <span asp-validation-for="PriceAfterDiscount" class="text-danger small"></span>
                </div>

                <div class="form-group mt-4">
                    <label asp-for="SelectedPharmacyIds" class="form-label fw-bold"></label>
                    <select asp-for="SelectedPharmacyIds" asp-items="Model.PharmacyOptions"
                            class="form-select" data-placeholder="Select Pharmacy"
                            data-minimum-results-for-search="Infinity">
                        <option value=""></option>
                    </select>
                    <span asp-validation-for="SelectedPharmacyIds" class="text-danger small"></span>
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ProductManager" class="form-label fw-bold"></label>
                    <input asp-for="ProductManager" class="form-control" placeholder="Enter product manager name" />
                    <span asp-validation-for="ProductManager" class="text-danger small"></span>
                </div>

                <div class="form-group mt-4">
                    <label asp-for="SponsorCompany" class="form-label fw-bold"></label>
                    <select asp-for="SponsorCompany" class="sponsor-select form-select" asp-items="Model.SponsorOptions">
                        <option  value=""></option>
                    </select>
                    <span asp-validation-for="SponsorCompany" class="text-danger small"></span>
                </div>

                <div class="form-group mt-4">
                    <label asp-for="MedicationPackSize" class="form-label fw-bold"></label>
                    <input asp-for="MedicationPackSize" class="form-control" placeholder="e.g., 30 tablets" />
                    <span asp-validation-for="MedicationPackSize" class="text-danger small"></span>
                </div>

                <div class="form-group mt-4">
                    <label asp-for="MedicationPackConsumptionDuration" class="form-label fw-bold"></label>
                    <div class="input-group">
                        <input asp-for="MedicationPackConsumptionDuration" class="form-control" placeholder="Days" />
                        <span class="input-group-text">days</span>
                    </div>
                    <span asp-validation-for="MedicationPackConsumptionDuration" class="text-danger small"></span>
                </div>

                <div class="form-group mt-4">
                    <label asp-for="SelectedDistributorIds" class="form-label fw-bold"></label>
                    <select asp-for="SelectedDistributorIds" asp-items="Model.DistributorOptions"
                            class="form-select" data-placeholder="Select Pharmacy"
                            data-minimum-results-for-search="Infinity">
                        <option value=""></option>
                    </select>
                    <span asp-validation-for="SelectedDistributorIds" class="text-danger small"></span>
                </div>   
                
                <div class="form-group mt-4">
                    <label asp-for="HCPList" class="form-label fw-bold"></label>
                    <input asp-for="HCPList" class="form-control" placeholder="Enter HCP names" />
                    <span asp-validation-for="HCPList" class="text-danger small"></span>
                </div>
            </div>
        </div>

        <!-- Form Footer -->
        <div class="row mt-5">
            <div class="col-12 text-center">
                <button type="submit" class="btn btn-primary px-5 py-2">
                    <i class="bi bi-save me-2"></i>Create Program
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-5 py-2 ms-3">
                    <i class="bi bi-x-circle me-2"></i>Cancel
                </a>
            </div>
        </div>
    </form>
</div>

@section Styles {
    <style>
        .form-control:focus, .form-select:focus {
            border-color: #957200;
            box-shadow: 0 0 0 0.25rem rgba(149, 114, 0, 0.25);
        }

        .btn-primary {
            background-color: #957200;
            border-color: #957200;
        }

       .btn-primary:hover {
           background-color: #7a5e00;
           border-color: #7a5e00;
       }
        /* Select2 height and padding matching Bootstrap */
        .select2-container .select2-selection--single {
            height: 38px !important;
            border-radius: 0.375rem !important;
            border: 1px solid #ced4da !important;
            padding: 0.375rem 0.75rem !important;
        }

        /* Select2 focus state to match Bootstrap */
        .select2-container--focus .select2-selection--single {
            border-color: #957200 !important;
            box-shadow: 0 0 0 0.25rem rgba(149, 114, 0, 0.25) !important;
        }

        /* Ensure Select2 dropdown matches input width */
        .select2-container {
            width: 100% !important;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.medication-select, .sponsor-select').select2({
                placeholder: 'Select or type a value',
                allowClear: true,
                tags: true, // This allows entering custom values
                width: '100%'
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}