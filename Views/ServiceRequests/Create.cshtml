@model ServiceRequestViewModel
@{
    ViewData["Title"] = "Create Service Request";
}

<header class="mb-4">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center p-3 rounded" style="background-color: #957200;">
            <h1 class="m-0 text-white">Admin Portal</h1>
        </div>
    </div>
</header>

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h2>Create Service Request</h2>
            <hr class="border-2 border-top border-secondary">
        </div>
    </div>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="row g-4">
            <!-- Left Column -->
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PatientRegistrationsId" class="form-label fw-bold"></label>
                    <select asp-for="PatientRegistrationsId" asp-items="ViewBag.Patients"
                            class="form-select" id="PatientSelect">
                        <option value="">-- Select Patient --</option>
                    </select>
                    <span asp-validation-for="PatientRegistrationsId" class="text-danger small"></span>
                </div>

                <div class="form-group mt-4">
                    <label for="RequiredTests" class="form-label fw-bold">Required Tests</label>
                    <select asp-for="RequiredTests" class="form-select select2-test" id="RequiredTests">
                        <option value="">-- Select Test --</option>
                        <option value="Germline BRCA">Germline BRCA</option>
                        <option value="Tissue BRCA">Tissue BRCA</option>
                        <option value="Somatic BRCA">Somatic BRCA</option>
                        <option value="HRD test">HRD test</option>
                        <option value="COPD">COPD</option>
                    </select>
                </div>

                <div class="form-group mt-4">
                    <label class="form-label fw-bold">Lab</label>
                    <select id="LabId" asp-items="@ViewBag.Labs" class="form-select">
                        <option value="">-- Select Lab --</option>
                    </select>
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="EVoucherPDFFile" class="form-label fw-bold"></label>
                    <input type="file" asp-for="EVoucherPDFFile" class="form-control" />
                    <span asp-validation-for="EVoucherPDFFile" class="text-danger small"></span>
                </div>

                <div class="form-group mt-4">
                    <label class="form-label fw-bold">Lab Branch</label>
                    <select id="LabBranchId" asp-for="LabBranchId" class="form-select">
                        <option value="">-- Select Lab Branch --</option>
                    </select>
                    <span asp-validation-for="LabBranchId" class="text-danger small"></span>
                </div>

                <div class="form-group mt-4">
                    <label class="form-label fw-bold">CoPayment Percentage</label>
                    <select asp-for="CoPaymentPercentage" class="form-select">
                        <option value="0">-- Select CoPayment Percentage --</option>
                        <option value="0">0%</option>
                        <option value="30">30%</option>
                    </select>
                    <span asp-validation-for="CoPaymentPercentage" class="text-danger small"></span>
                </div>
            </div>
        </div>

        <!-- Patient Details Section -->
        <div id="patientDetails" class="mt-4" style="display: none;">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label fw-bold">Mobile Number</label>
                        <input type="text" id="MobileNumber" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label fw-bold">Program Name</label>
                        <input type="text" id="ProgramName" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label fw-bold">Program Sponsor</label>
                        <input type="text" id="ProgramSponsor" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label fw-bold">National ID</label>
                        <input type="text" id="NationalID" class="form-control" readonly />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label fw-bold">Membership Number</label>
                        <input type="text" id="MembershipNumber" class="form-control" readonly />
                    </div>
                </div>
            </div>
        </div>

        <!-- Form Footer -->
        <div class="row mt-5">
            <div class="col-12 text-center">
                <button type="submit" class="btn btn-primary px-5 py-2">
                    <i class="bi bi-save me-2"></i>Submit
                </button>
                <a asp-action="Indexadmin" asp-controller="PatientRegistrations"
                   class="btn btn-outline-secondary px-5 py-2 ms-3">
                    <i class="bi bi-x-circle me-2"></i>Cancel
                </a>
            </div>
        </div>
    </form>
</div>

@section Styles {
    <style>
        .form-control:focus, .form-select:focus {
            border-color: #957200;
            box-shadow: 0 0 0 0.25rem rgba(149, 114, 0, 0.25);
        }

        .btn-primary {
            background-color: #957200;
            border-color: #957200;
        }

            .btn-primary:hover {
                background-color: #7a5e00;
                border-color: #7a5e00;
            }

        .form-check-input:checked {
            background-color: #957200;
            border-color: #957200;
        }
    </style>
}

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>

  <script>
        $(document).ready(function () {
            $("#PatientSelect").select2({
                placeholder: "-- Select Patient --",
                allowClear: true
            });

            $('#LabId').on('change', function () {
                var labId = $(this).val();
                var $labBranchDropdown = $('#LabBranchId');

                $labBranchDropdown.empty();
                $labBranchDropdown.append('<option value="">-- Select Lab Branch --</option>');

                if (labId) {
                    $.get('/ServiceRequests/GetLabBranches', { labId: labId }, function (data) {
                        $.each(data, function (index, branch) {
                            $labBranchDropdown.append('<option value="' + branch.id + '">' + branch.labBranchName + '</option>');
                        });
                    });
                }
            });

            $('#PatientSelect').change(function () {
                var patientId = $(this).val();
                if (patientId) {
                    $.get('/PatientRegistrations/GetPatientDetails/' + patientId, function (data) {
                        $('#MobileNumber').val(data.mobileNumber);
                        $('#ProgramName').val(data.programName);
                        $('#ProgramSponsor').val(data.programSponsor);
                        $('#NationalID').val(data.nationalID);
                        $('#MembershipNumber').val(data.membershipNumber);
                        $('#patientDetails').show();
                    });
                } else {
                    $('#patientDetails').hide();
                }
            });
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}